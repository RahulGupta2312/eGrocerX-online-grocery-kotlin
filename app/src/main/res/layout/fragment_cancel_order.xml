<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.cancel.CancelOrderFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16sdp"
        android:text="Please mention your reason for cancellation of this order. our support will connect you regarding the issues."
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_14ssp" />

    <EditText
        android:id="@+id/etCancelReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        android:hint="Reason"
        android:inputType="textImeMultiLine"
        android:minLines="3" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirmCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/bg_btn_green"
        android:text="Confirm Cancel"
        android:textColor="@color/colorWhite" />

</LinearLayout>