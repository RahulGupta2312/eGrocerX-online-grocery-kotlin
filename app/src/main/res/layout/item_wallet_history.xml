<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp">

    <TextView
        android:id="@+id/itemWalletTxnAmount"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintBottom_toBottomOf="@+id/itemWalletTxnDate"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Rs. 200" />

    <TextView
        android:id="@+id/itemWalletTxnId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Txn Id: 123456" />

    <TextView
        android:id="@+id/itemWalletTxnNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/itemWalletTxnDate"
        app:layout_constraintTop_toBottomOf="@+id/itemWalletTxnDate"
        tools:text="Transaction Note" />

    <TextView
        android:id="@+id/itemWalletTxnDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/itemWalletTxnId"
        app:layout_constraintTop_toBottomOf="@+id/itemWalletTxnId"
        tools:text="Txn Date" />

</androidx.constraintlayout.widget.ConstraintLayout>